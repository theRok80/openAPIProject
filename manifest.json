{
    "name": "theRok's extension",
    "version": "1.0",
    "description": "theRoks's open API project",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "declarativeContent",
        "tts",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "page_action": {
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "images/icons8-api-16.png",
        "32": "images/icons8-api-32.png",
        "48": "images/icons8-api-48.png",
        "100": "images/icons8-api-100.png"
    }
}